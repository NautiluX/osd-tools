#!/bin/bash

set -euo pipefail

OSDENVPATH="$HOME/ocenv"
ALIAS=${1:-""}
CLUSTERID=${2:-""}
BINPATH="$OSDENVPATH/$ALIAS/bin"

if [ "$ALIAS" == "" ]; then
  echo "usage: $0 <alias> [<clusterid>]"
  exit 0
fi

mkdir -p "$BINPATH"
cd "$OSDENVPATH"
if [ ! -f "$ALIAS/.envrc" ]; then
  cat << EOF > "$ALIAS/.envrc"
export KUBECONFIG="\$(pwd)/kubeconfig.json"
PATH_add $BINPATH

EOF
fi

echo 'ocm tunnel $CLUSTERID' > "$BINPATH/oct"
chmod +x "$BINPATH/oct"
echo 'ocm cluster login --token $CLUSTERID' > "$BINPATH/ocl"
chmod +x "$BINPATH/ocl"
echo 'ocm describe cluster $CLUSTERID' > "$BINPATH/ocd"
chmod +x "$BINPATH/ocd"

cat << EOF > "$BINPATH/ocb"
#!/bin/bash

set -euo pipefail

sudo ls
ocm backplane tunnel \$CLUSTERID &
sleep 5s
ocm backplane login \$CLUSTERID
EOF
chmod +x "$BINPATH/ocb"

chmod +x "$BINPATH/ocl"
cd "$ALIAS"
if [[ "$CLUSTERID" != "" ]]; then
  echo "export CLUSTERID=\"$CLUSTERID\"" >> ".envrc"
fi
direnv allow
exec bash
